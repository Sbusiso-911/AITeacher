<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Declare any variables here -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatFragmentBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/chat_background_glow"
        tools:context=".ChatFragment"
        android:contentDescription="@string/chat_fragment_background">

        <!-- Scrollable bar containing back, Fetch Email, and Share buttons -->
        <HorizontalScrollView
            android:id="@+id/topBarScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:contentDescription="@string/top_bar_scroll_view_desc">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp"
                android:baselineAligned="false"
                android:contentDescription="@string/top_bar_linear_layout_desc">

                <!-- Box for History button -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/historyBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/history_box_desc">

                    <!-- ImageButton for History -->
                    <ImageButton
                        android:id="@+id/historyButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_history"
                        android:contentDescription="@string/history_button_desc"
                        android:padding="8dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Box for ChatGPT Options button -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chatGptOptionsBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/chat_gpt_options_box_desc">

                    <!-- ImageButton for ChatGPT Options -->
                    <ImageButton
                        android:id="@+id/chatGptOptionsButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_chat_gpt_options"
                        android:contentDescription="@string/chat_gpt_options_button_desc"
                        android:padding="8dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Box for Share button -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/shareBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/share_box_desc">

                    <!-- ImageButton for Share -->
                    <ImageButton
                        android:id="@+id/shareButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_share"
                        android:contentDescription="@string/share_button_desc"
                        android:padding="8dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/chatScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topBarScrollView"
            app:layout_constraintBottom_toTopOf="@+id/messageInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true"
            android:contentDescription="@string/chat_scroll_view_desc">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/chat_linear_layout_desc">

                <!-- Welcome TextView -->
                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_message"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/welcome_message" />

                <!-- RecyclerView for displaying chat messages -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/chat_messages_list" />

                <!-- Follow-up questions container -->
                <LinearLayout
                    android:id="@+id/followUpQuestionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:contentDescription="@string/follow_up_questions_container_desc">
                </LinearLayout>

                <!-- Follow-up questions toggle -->
                <LinearLayout
                    android:id="@+id/followUpToggleContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow-up Questions"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"/>

                    <Switch
                        android:id="@+id/followUpToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ConstraintLayout for message input and send button -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/message_input_layout">

            <!-- EditText for typing messages -->
            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:hint="@string/type_message"
                android:inputType="textMultiLine"
                android:maxLines="20"
                android:minHeight="48dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:scrollHorizontally="false"
                android:autofillHints="username"
                android:maxWidth="488dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/voiceInputButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- ImageButton for voice input -->
            <ImageButton
                android:id="@+id/voiceInputButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/voice_input"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:layout_constraintEnd_toStartOf="@id/scanTextButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- ImageButton for scanning text -->
            <ImageButton
                android:id="@+id/scanTextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_scan"
                android:contentDescription="@string/scan_text"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:layout_constraintEnd_toStartOf="@id/sendButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- ImageButton for sending messages with icon -->
            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_button_text"
                android:drawableStart="@drawable/ic_send"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:contentDescription="@string/send_button_desc"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:drawablePadding="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Overlay for subscription models -->
        <View
            android:id="@+id/subscriptionOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onSubscriptionOverlayClick" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>