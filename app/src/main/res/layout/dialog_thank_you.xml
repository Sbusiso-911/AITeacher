<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/premium_dialog_background">

    <!-- Hero animation with premium treatment -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/thank_you_animation"
        app:tint="@color/premium_gold"/>

    <!-- Gratitude message with psychological impact -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŒŸ Thank You for Choosing Us!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/premium_gold"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:layout_marginTop="16dp"/>

    <!-- Social proof component -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join 70,000+ learners who love our app!"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <!-- Primary CTA - Emotional reward trigger -->
    <Button
        android:id="@+id/btnRateNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â­ Rate Us 5 Stars!"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:background="@drawable/button_premium_gradient"
        android:paddingVertical="14dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/ic_star_filled"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"/>

    <!-- Secondary CTA - Lower commitment -->
    <Button
        android:id="@+id/btnRateLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remind Me Later"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/premium_gold"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingVertical="12dp"
        android:layout_marginTop="8dp"/>

    <!-- Tertiary action - Least prominent -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Learning"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white_70"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingVertical="12dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_arrow_right"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white_70"/>
</LinearLayout>