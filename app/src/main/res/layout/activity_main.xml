<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Declare any variables here -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity"
        android:background="@color/clear">

        <!-- ScrollView to make the content scrollable -->
        <ScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/adContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Non-chat elements -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/non_chat_elements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/clear"
                android:fitsSystemWindows="true"
                tools:context=".MainActivity">

                <!-- Badge Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/badge_container"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Outer Badge Background -->
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Badge ImageView -->
                    <ImageView
                        android:id="@+id/badgeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bronze_badge"
                        android:contentDescription="@string/badge_image_desc"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Status TextView -->
                    <TextView
                        android:id="@+id/badgeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pro"
                        android:textColor="@android:color/white"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/pro_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Button for purchasing options with icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buyButton"
                    android:layout_width="240dp"
                    android:layout_height="120dp"
                    android:text="@string/Buy_to_chat_with_AITeacher"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary_color"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:layout_constraintTop_toBottomOf="@id/badge_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.8" />

                <!-- Background gradient for icons and animation -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/icons_gradient_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient_background"
                    app:layout_constraintTop_toBottomOf="@id/buyButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Notification icon with text -->
                    <LinearLayout
                        android:id="@+id/notificationLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/notificationIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_notification"
                            android:contentDescription="@string/notification_icon_desc" />

                        <TextView
                            android:id="@+id/notificationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Lottie animation -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimation"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/animation"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/notificationLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="NotSibling" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Welcome TextView -->
                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome to AI Teacher!
Your AI-powered assistant is here to help you learn, create, and solve problems effortlessly.

Ask me anything or choose from the suggested questions below to get started!"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:background="@drawable/welcome_text_gradient"
                    app:layout_constraintTop_toBottomOf="@id/icons_gradient_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    tools:ignore="NotSibling" />

                <!-- HorizontalScrollView for recent conversation icons -->
                <HorizontalScrollView
                    android:id="@+id/recentConversationsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:id="@+id/recentConversationsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Dynamic buttons will be added here -->
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- First set of suggested questions arranged in L shapes -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/suggestedQuestionsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/recentConversationsLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <!-- First question (200h x 100w) -->
                    <ImageView
                        android:id="@+id/question1"
                        android:layout_width="160dp"
                        android:layout_height="320dp"
                        android:src="@drawable/question1_image"
                        android:contentDescription="How can I remember everything that I learn?"
                        android:background="@drawable/gradient_background"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Second question (100h x 100w) -->
                    <ImageView
                        android:id="@+id/question2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/question2_image"
                        android:contentDescription="How to get more likes and followers in your social media post?"
                        android:background="@drawable/gradient_background"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toEndOf="@id/question1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Third question (200h x 200w) -->
                    <ImageView
                        android:id="@+id/question3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/question3_image"
                        android:contentDescription="What methods do DJ's utilise to prevent jarring transitions and ensure smooth continuity when transitioning to the next song?"
                        android:background="@drawable/gradient_background"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/question1" />

                    <!-- Fourth question (400h x 200w) -->
                    <ImageView
                        android:id="@+id/question4"
                        android:layout_width="160dp"
                        android:layout_height="320dp"
                        android:src="@drawable/question4_image"
                        android:contentDescription="Strategies to improve financial situation ?"
                        android:background="@drawable/gradient_background"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toEndOf="@id/question3"
                        app:layout_constraintTop_toBottomOf="@id/question2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Second HorizontalScrollView for additional suggested questions -->
                <HorizontalScrollView
                    android:id="@+id/additionalSuggestedQuestionsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/suggestedQuestionsLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical">

                        <!-- Additional suggested questions text views with gradient background -->
                        <TextView
                            android:id="@+id/question5"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="Will AI really take\npeople’s jobs, and how\ncan I prepare for\nthat future?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question6"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s one small habit\nthat could completely change\nmy life in a\nyear?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question7"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s something everyone believes\nbut might not be\ntrue?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question8"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s the simplest way to\nmake a great first\nimpression?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question9"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s a skill nobody teaches,\nbut everyone should learn?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question10"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="Can I truly be creative,\nor is it something\nyou’re born with?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question11"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="How does screen time affect\nyour body and brain,\nand what are small\nchanges you can make\nto reduce it?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question12"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s a skill I can\nlearn now to stay\nrelevant in the\nfuture?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question13"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What is the best way\nto deal with peer\npressure in high-stakes\nsituations without losing\nyour confidence?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question14"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_gradient_background"
                            android:gravity="center"
                            android:text="Are we becoming too dependent\non technology?"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question15"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_gradient_background"
                            android:gravity="center"
                            android:text="How does stress affect your\nlong-term health, and what\nare some simple ways\nto reduce it daily?"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question16"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_gradient_background"
                            android:gravity="center"
                            android:text="How do I build trust\nquickly in a negotiation?"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <TextView
                            android:id="@+id/question17"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="How does social media impact\nyour self-esteem, and what\ncan you do to\nstay positive online?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Eighteenth vertical question -->
                        <TextView
                            android:id="@+id/question18"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_gradient_background"
                            android:gravity="center"
                            android:text="Why is self-discipline so\ndifficult to build, and\nwhat habits make it\neasier to stay on\ntrack?"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Nineteenth vertical question -->
                        <TextView
                            android:id="@+id/question19"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_gradient_background"
                            android:gravity="center"
                            android:text="How do I stay creative\nin a world of\nshortcuts and automation?"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Twentieth vertical question -->
                        <TextView
                            android:id="@+id/question20"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_gradient_background"
                            android:gravity="center"
                            android:text="Will the rapid pace of\ninnovation make it harder\nto keep up or\neasier to succeed?"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Fourth set of vertical questions in a HorizontalScrollView -->
                <HorizontalScrollView
                    android:id="@+id/verticalQuestionsScrollView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/additionalSuggestedQuestionsLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical">

                        <!-- First vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion1"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="How to stay protected\nagainst hackers"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Second vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion2"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What are hiring managers\nreally looking for in\na candidate?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Third vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion3"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="How to develop a\ngrowth mindset?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Fourth vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion4"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="How to create a\nsuccessful YouTube channel?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Fifth vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion5"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What are the best\nways to learn\ncoding?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Sixth vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion6"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s the role of\nstorytelling in convincing\nsomeone to accept\nmy offer?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                        <!-- Seventh vertical question -->
                        <TextView
                            android:id="@+id/verticalQuestion7"
                            android:layout_width="300dp"
                            android:layout_height="160dp"
                            android:text="What’s the best way to\nhandle a no and\nturn it into\na yes?"
                            android:background="@drawable/button_gradient_background"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:lineSpacingExtra="4dp"
                            android:breakStrategy="high_quality" />

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Last two suggested questions sitting next to each other -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lastSuggestedQuestionsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/verticalQuestionsScrollView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <!-- First of the last two questions (250h x 125w) -->
                    <ImageView
                        android:id="@+id/lastQuestion1"
                        android:layout_width="160dp"
                        android:layout_height="320dp"
                        android:src="@drawable/last_question1_image"
                        android:contentDescription="Best ways to lose weight quickly"
                        android:background="@drawable/gradient_background"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Second of the last two questions (250h x 125w) -->
                    <ImageView
                        android:id="@+id/lastQuestion2"
                        android:layout_width="160dp"
                        android:layout_height="320dp"
                        android:src="@drawable/last_question2_image"
                        android:contentDescription="What are some of the best cooking tips?"
                        android:background="@drawable/gradient_background"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toEndOf="@id/lastQuestion1"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Placeholder view -->
                <View
                    android:id="@+id/someOtherView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/lastSuggestedQuestionsLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- RecyclerView for displaying chat messages -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scrollbars="vertical"
                    app:layout_constraintTop_toBottomOf="@id/someOtherView"
                    app:layout_constraintBottom_toTopOf="@id/messageInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/conversation_background"
                    android:padding="8dp" />

                <!-- ConstraintLayout for message input and send button -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/messageInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="14dp"
                    android:layout_marginBottom="14dp">

                    <!-- Guideline to help center the EditText horizontally -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="16dp" />

                    <!-- EditText for typing messages-->
                    <EditText
                        android:id="@+id/messageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:hint="Ask me anything"
                        android:inputType="textMultiLine"
                        android:maxLines="8"
                        android:padding="24dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:background="@drawable/message_edittext_background"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- FrameLayout for dynamic AdView -->
        <FrameLayout
            android:id="@+id/adContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- AdView for displaying larger banner ads -->
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="LARGE_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
        </FrameLayout>

        <!-- Fragment container for chat elements -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>